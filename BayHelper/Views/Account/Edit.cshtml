@model BayHelper.Com.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center>
<h2>
    Edit
</h2>
</center>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.UserID)
    @Html.HiddenFor(model => model.Nickname)
    @Html.HiddenFor(model => model.AddressID)
    @Html.HiddenFor(model => model.OrganizationUser)
    @Html.HiddenFor(model => model.OrganizationID)
    <center>
    <table style="margin: auto;">
        <tr>
            <td>
                <h4>
                    First Name:</h4>
            </td>
            <td>
                @Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName)
            </td>
        </tr>
        <tr>
            <td>
                <h4>
                    Last Name:</h4>
            </td>
            <td>
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)
            </td>
        </tr>
        <tr>
            <td>
                <h4>
                    Email:</h4>
            </td>
            <td>
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </td>
        </tr>
        <tr>
            <td>
                <h4>
                    Street Address 1:</h4>
            </td>
            <td>
                @Html.TextBoxFor(m => m.Address.StreetAddress1)
                @Html.ValidationMessageFor(m => m.Address.StreetAddress1)
            </td>
        </tr>
        <tr>
            <td>
                <h4>
                    Street Address 2:</h4>
            </td>
            <td>
                @Html.TextBoxFor(m => m.Address.StreetAddress2)
                @Html.ValidationMessageFor(m => m.Address.StreetAddress2)
            </td>
        </tr>
        <tr>
            <td>
                <h4>
                    City:</h4>
            </td>
            <td>
                @Html.TextBoxFor(m => m.Address.City)
                @Html.ValidationMessageFor(m => m.Address.City)
            </td>
        </tr>
        <tr>
            <td>
                <h4>
                    State:</h4>
            </td>
            <td>
                @Html.TextBoxFor(m => m.Address.State)
                @Html.ValidationMessageFor(m => m.Address.State)
            </td>
        </tr>
        <tr>
            <td>
                <h4>
                    Zip:</h4>
            </td>
            <td>
                @Html.TextBoxFor(m => m.Address.Zip)
                @Html.ValidationMessageFor(m => m.Address.Zip)
            </td>
        </tr>
        <tr>
            <td>
                <br />
            </td>
        </tr>
        <tr >
            <td colspan ="2">
                <center><div>
                    @Html.ActionLink("Save", "Edit", Model, new { @class = "btn" })</div>   <!--update to save edits-->
                </center>
            </td>
            <td>
            </td>
        </tr>
    </table>
    </center>
}
