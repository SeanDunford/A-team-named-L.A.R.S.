@if (Request.IsAuthenticated)
{
    <li class="divider-vertical"></li>
    <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name<b
        class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("account", "Index", "Account")</li>
            <li class="divider"></li>
            <li>@Html.ActionLink("logout", "LogOff", "Account")</li>
        </ul>
    </li>
}
else
{
    <li>@Html.ActionLink("Sign Up!", "Register", "Account")</li>
    <li>@Html.ActionLink("Login", "LogOn", "Account")</li> }
