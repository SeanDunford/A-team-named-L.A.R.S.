<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link href="../../Content/css/bootstrap.css" rel="stylesheet">
    <link href="../../Content/Site.css" rel="stylesheet" />
    <!--<link href="@Url.Content("~/assets/css/bootstrap-responsive.css")" rel="stylesheet">-->
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
    <!-- Le fav and touch icons -->
    <!--[if gte IE 9]>
  <style type="text/css">
    .gradient {
       filter: none;
    }
  </style>
<![endif]-->
    <link rel="shortcut icon" href="assets/ico/favicon.ico">
    <script src="../../Content/js/jquery.js"></script>
    <script src="../../Content/js/jquery.blockUI.js"></script>
    <script src="../../Content/js/bootstrap.min.js"></script>
</head>
<body>
    <header>
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                        class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                    </a>@Html.ActionLink("BayHelper", "Index", "Home", null, new { @class = "brand" })
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="@ViewBag.EventsActive">@Html.ActionLink("Events", "Index", "Event")</li>
                            <li class="@ViewBag.DiscoverActive">@Html.ActionLink("Discover Tampa Bay", "DiscoverTampaBay", "Home")</li>
                            <li class="@ViewBag.AboutActive">@Html.ActionLink("About Us", "About", "Home")</li>
                        </ul>
                        <ul class="nav pull-right">
                            <form class="navbar-search pull-left">
                            <input type="text" class="search-query span2" placeholder="Search">
                            </form>
                            @Html.Partial("_LogOnPartial")
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container body-container">
        @RenderBody()
    </div>
    
    <footer>
        <div class="footer-container">
            Team L.A.R.S. City of Tampa Hackathon 2012 &copy;
        </div>
    </footer> 
</body>
</html>
